{% extends 'base/base.html.twig' %}

{% block title %}Editar club{% endblock %}

{% block body %}
    <h1>Club edit</h1>

    {% form_theme edit_form
        '::jquery.collection.html.twig'
        '::collection-form-custom-theme.html.twig'
    %}
    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        <div class="form-group">
            {{ form_row(edit_form.name) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.phone) }}
        </div>
        <div class="form-group">
            {{ form_row(edit_form.players) }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Editar</button>
        </div>
    {{ form_end(edit_form) }}

    <div class="row">
        <div class="col-xs-12">
            {{ form_start(delete_form) }}
                <a href="{{ path('club_index') }}" class="btn btn-sm btn-primary"><i class="fa fa-reply"></i> Volver al listado</a>
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {% javascripts '@AppBundle/Resources/public/js/jquery.collection.js' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script type="text/javascript">
        $(document).ready(function(){
            $('.player-collection').collection({
                'add': '<a href="#" class="btn btn-sm btn-default">AÃ±adir jugador</a>'
            });
        });
    </script>
{% endblock %}
